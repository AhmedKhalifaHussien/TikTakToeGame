<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/primaryDarkColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/container"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Player_One_Layout"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/player_selected"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_Player_One"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/player_one"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:maxLines="1"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_x" />
            <TextView
                android:id="@+id/TextView_Score_Player_One"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginVertical="@dimen/_8sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Player_Two_Layout"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:background="@drawable/player_not_selected"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_Player_Two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/player_two"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:maxLines="1"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_o" />
            <TextView
                android:id="@+id/TextView_Score_Player_Two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginVertical="@dimen/_8sdp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_38sdp"
        android:orientation="vertical"
        android:background="@drawable/border_green">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <ImageView
                android:id="@+id/image1"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                tools:ignore="Suspicious0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back_green"
                android:background="@drawable/xo_no_border"/>

            <ImageView
                android:id="@+id/image2"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                tools:ignore="Suspicious0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back_green"
                android:background="@drawable/xo_no_border"/>
            <ImageView
                android:id="@+id/image3"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                tools:ignore="Suspicious0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back_green"
                android:background="@drawable/xo_no_border"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <ImageView
                android:id="@+id/image4"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                tools:ignore="Suspicious0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back_green"
                android:background="@drawable/xo_no_border"/>

            <ImageView
                android:id="@+id/image5"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                tools:ignore="Suspicious0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back_green"
                android:background="@drawable/xo_no_border"/>
            <ImageView
                android:id="@+id/image6"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                tools:ignore="Suspicious0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back_green"
                android:background="@drawable/xo_no_border"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <ImageView
                android:id="@+id/image7"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                tools:ignore="Suspicious0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back_green"
                android:background="@drawable/xo_no_border"/>

            <ImageView
                android:id="@+id/image8"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                tools:ignore="Suspicious0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back_green"
                android:background="@drawable/xo_no_border"/>
            <ImageView
                android:id="@+id/image9"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_90sdp"
                tools:ignore="Suspicious0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/back_green"
                android:background="@drawable/xo_no_border"/>
        </LinearLayout>


    </LinearLayout>




</RelativeLayout>